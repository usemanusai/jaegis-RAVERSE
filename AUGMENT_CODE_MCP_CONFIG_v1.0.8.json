{
  "mcpServers": {
    "raverse": {
      "command": "npx",
      "args": [
        "-y",
        "raverse-mcp-server@1.0.8"
      ],
      "env": {
        "LOG_LEVEL": "INFO",
        "NODE_NO_WARNINGS": "1",
        "NO_COLOR": "1",
        "FORCE_COLOR": "0",
        "TERM": "dumb",
        "NPM_CONFIG_UPDATE_NOTIFIER": "false",
        "NPM_CONFIG_AUDIT": "false",
        "NPM_CONFIG_FUND": "false",
        "NPM_CONFIG_LOGLEVEL": "silent",
        "npm_config_loglevel": "silent"
      }
    }
  }
}

