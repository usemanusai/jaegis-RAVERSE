{
  "dashboard": {
    "title": "RAVERSE Monitoring Dashboard",
    "tags": ["raverse", "binary-patching", "ai"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Patches Applied",
        "type": "stat",
        "targets": [
          {
            "expr": "raverse_patches_total",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Patch Success Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "rate(raverse_patches_success_total[5m]) / rate(raverse_patches_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "API Calls per Minute",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(raverse_api_calls_total[1m]) * 60",
            "refId": "A",
            "legendFormat": "{{provider}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Cache Hit Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(raverse_cache_hits_total[5m]) / (rate(raverse_cache_hits_total[5m]) + rate(raverse_cache_misses_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Patch Duration (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(raverse_patch_duration_seconds_bucket[5m]))",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "PostgreSQL Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "Redis Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "redis_memory_used_bytes / redis_memory_max_bytes * 100",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16}
      },
      {
        "id": 8,
        "title": "System CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16}
      }
    ],
    "schemaVersion": 36,
    "version": 1
  }
}

